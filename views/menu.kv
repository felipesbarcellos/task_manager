#:import C kivy.utils.get_color_from_hex

<Button>:
    background_normal: ''
    background_color: C("#909000")

<Label>:
    outline_color: C("#000000")
    outline_width: 1
    

<Menu>:
    BoxLayout:
        orientation: "vertical"
        size_hint: (None, None)
        size: root.width, root.height
        BoxLayout:
            size_hint_y: None
            height: root.height/100*40
            Label: 
                color: C("#ffed00")
                bold: True
                text: "Tarefas\n+ Acessibilidade"
                font_size: 0.1*self.width
                pos_hint: {"center_x":0.5}
                halign: "center"
        BoxLayout:
            spacing: 20
            padding: 0, 0, 0, 50
            size_hint_y: None
            height: root.height/100*55
            orientation: "vertical"
            pos_hint: {"center_x": .5}
            Button:
                text: "Adicionar Tarefa"
                font_size: 0.07*self.width
            Button:
                text: "Gerenciar Tarefas"
                font_size: 0.07*self.width
            Button:
                text: "Apoiar o projeto"
                font_size: 0.07*self.width
        BoxLayout:
            size_hint_y: None
            height: root.height/100*5
            Label:
                text: "Desenvolvido por: Felipe Barcellos"
                font_size:0.03*self.width
                canvas.before:
                    Color:
                        rgba: (.75,.75,.75,0.7)
                    Rectangle:
                        pos: self.pos
                        size: self.size